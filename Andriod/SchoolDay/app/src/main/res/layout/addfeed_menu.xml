<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/bauhaus93"
        android:text="Create Post"
        android:textSize="40sp"></TextView>
<EditText
    android:layout_width="match_parent"
    android:id="@+id/add_post_text"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_height="wrap_content"
    android:hint="Type your post here"
    android:textColorHint="@color/black"
    android:textSize="@dimen/_16sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/custom_input"
    android:padding="@dimen/_10sdp"
    ></EditText>
    <androidx.cardview.widget.CardView
        android:id="@+id/upload_post_file"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_upload_cloud"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload File"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#704598"
        android:layout_marginRight="@dimen/_5sdp"></Button>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:layout_marginRight="@dimen/_5sdp"></Button>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#8BC34A"
        android:layout_marginRight="@dimen/_5sdp"></Button>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:layout_marginRight="@dimen/_5sdp"></Button>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:layout_marginRight="@dimen/_5sdp"></Button>
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/events4"
        android:text="Post"
        android:textSize="@dimen/_26sdp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_40sdp"
        android:id="@+id/post"></Button>
    </LinearLayout>
</ScrollView>