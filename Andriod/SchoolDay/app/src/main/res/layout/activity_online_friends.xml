<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.OnlineFriendsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:id="@+id/above_relative_chat"
        android:background="#F1F9FF">

        <TextView
            android:id="@+id/chatwithfriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chat_with_friends"
            android:textSize="20dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/online"
            android:textSize="20dp"
            android:layout_below="@+id/chatwithfriends"
            ></TextView>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/online_image"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/chatwithfriends"
            android:layout_marginTop="9dp"
            ></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_droup_menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/above_relative_chat"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_of_person_chating"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#53B1A2">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_user_regular"
                    android:layout_centerInParent="true"
                    ></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_of_person_chating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.Amena"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_toRightOf="@id/image_of_person_chating"
            android:layout_centerVertical="true"
            ></TextView>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/online_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            ></ImageView>
    </RelativeLayout>

</RelativeLayout>