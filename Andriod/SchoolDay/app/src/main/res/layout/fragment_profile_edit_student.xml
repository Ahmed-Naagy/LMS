<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.ProfileEditStudentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20sp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Student Name"
            android:inputType="textPersonName"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#B92F40"
            app:met_primaryColor="#B92F40"
            app:met_underlineColor="#B92F40"></com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/roll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Roll Number"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#B92F40"
            app:met_primaryColor="#B92F40"
            app:met_underlineColor="#B92F40"></com.rengwuxian.materialedittext.MaterialEditText>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/class_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="Class Number"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#B92F40"
            app:met_primaryColor="#B92F40"
            app:met_underlineColor="#B92F40"></com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/section_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Section"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#B92F40"
            app:met_primaryColor="#B92F40"
            app:met_underlineColor="#B92F40"></com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/gender_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Gender"
            android:inputType="text"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#B92F40"
            app:met_primaryColor="#B92F40"
            app:met_underlineColor="#B92F40"></com.rengwuxian.materialedittext.MaterialEditText>


        <Button
            android:id="@+id/save_edit_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="#B92F40"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_20sdp"></Button>
    </LinearLayout>
</ScrollView>